{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deepseek-desktop",
  "version": "0.1.0",
  "identifier": "com.deepseek.viewer",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DeepSeek Chat Viewer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:default",
            "core:window:allow-internal-toggle-maximize",
            "dialog:allow-save",
            "dialog:allow-open",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-exists",
            "fs:allow-read",
            "fs:allow-write"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
